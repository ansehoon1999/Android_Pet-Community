<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorSmallTitle"
                    android:id="@+id/list_SalesTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수제 간식 만드는 집 "
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_SalesAddress2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/online1"
                    android:drawablePadding="7dip"

                    android:text="수원시 권선구 호매실동 "
                    android:textColor="#5517191B"

                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="25dp">

                    <Button
                        android:id="@+id/list_hash12"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:background="@drawable/btn_bg_ex"
                        android:layout_marginRight="15dp"
                        android:enabled="false"
                        android:text="#hash"
                        android:textSize="8dp"
                        android:textColor="#F44336" />
                    <Button
                        android:id="@+id/list_hash22"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:background="@drawable/btn_bg_ex"
                        android:layout_marginRight="15dp"
                        android:enabled="false"
                        android:text="#hash"
                        android:textSize="8dp"
                        android:textColor="#F44336"/>
                    <Button
                        android:id="@+id/list_hash32"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:background="@drawable/btn_bg_ex"
                        android:enabled="false"
                        android:text="#hash"
                        android:textSize="8dp"
                        android:textColor="#F44336"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="1dp"
        android:background="@color/colorHorizontal"/>

</LinearLayout>